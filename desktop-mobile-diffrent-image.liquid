<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
<section class="banner-area">
    <div class="container1">
        <div class="all-banner-slide owl-carousel">
  
           {% for block in section.blocks %}
              
                <div class="single-banner-slide bg-image-{{forloop.index0}}  ">
                  
                {%- style -%}
                    {% assign background_image_url = block.settings.bgimage | img_url: 'master' %}
                    @media screen and (min-width: 821px) { 
                        .owl-item  .bg-image-{{forloop.index0}}  {
                            background-image: url('{{ background_image_url }}');
                        }
                    }
                    @media screen and (max-width: 820px) {
                        .owl-item .bg-image-{{forloop.index0}}{
                            background-image: url('{{ block.settings.mobbg | img_url: 'master' }}');
                        }
                    }
                {%- endstyle -%}

                    <div class="main01 container">
                        <div class="main02">
                            <h2 style="color:{{ block.settings.colour }};">{{ block.settings.heading1 }}</h2>
                            <p style="color:{{ block.settings.colour2 }};">{{ block.settings.per1 }}</p>
                            {% if section.settings.btntext != blank %}
                                <a href="{{ section.settings.btnurl }}">{{ section.settings.btntext }}</a>
                            {% endif %}
                            <div class="maincount">
                                {{ block.settings.counter }}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

<script>
        $('.all-banner-slide').owlCarousel({
          loop:true,
          nav:false,
          autoplay:true,
          autoplayTime:1000,
          dots:true,
          responsive:{
              0:{

                  items:1
              },
              600:{

                  items:1
              },
              1000:{

                  items:1
              },
               2000:{

                  items:1
              }
          }
      });
    </script>
<style>
.vl {
    border-left: 1px solid #231f203d;
    height: 60px;
}
.maincount {
    display: flex;
    gap: 20px;
    margin-top: 50px;
}
.countcust {
    width: 26%;
}
.countcust h3 {
    font-size: 25px!important;
    color: #231F20;
    font-weight: bold;
    margin-bottom: 0;
}
.single-banner-slide {
    min-height: 600px;
    width: 100%;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    padding: 0 10px;
}
.single-banner-slide span {
    color: #fff;
    text-transform: uppercase;
    font-weight: 600;
}
.single-banner-slide::after {
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    background: rgba(0, 0, 0, 0.4);
    z-index: -1;
    width: 100%;
    height: 100%;
}
.single-banner-slide p {
    color: #231F20;
    font-size: 15px;
    margin: 0 auto;
    text-align: left;
}
.single-banner-slide a {
    color: #fff;
    background: #231F20;
    padding: 10px 45px;
    border-radius: 100px;
    text-decoration: none;
    font-size: 15px;
    font-weight: 600;
    margin-top: 30px;
    transition: 0.3s;
}
.single-banner-slide a:hover {
    color: #fff;
    background: #231F20;
}
.banner-area .owl-dots {
    display: block !important;
}
.main01 {
    max-width: 1300px!important;
    margin: 0 auto;
}
.main02 {
    width: 552px;
}
.main02 h2 {
    color: #231F20;
    text-transform: none;
    font-size: 61px;
    font-weight: bold!important;
    line-height: 66px;
    margin-bottom: 14px;
    letter-spacing: normal;
}
.single-banner-slide p {
    color: #231F20;
    font-size: 15px;
    margin: 0 auto;
    text-align: left;
    padding-bottom: 33px;
}
.main02 a {
    color: #fff;
    background: #231F20;
    padding: 12px 45px;
    border-radius: 100px;
    text-decoration: none;
    font-size: 16px;
    font-weight: 400!important;
    transition: 0.3s;
}
.maincount p {
    font-size: 14px;
}
.banner-area button.owl-dot {
    padding: 20px!important;
    background-color: #231F20!important;
    border-radius: 5px!important;
}
.owl-carousel .owl-nav button.owl-next, .owl-carousel .owl-nav button.owl-prev, .owl-carousel button.owl-dot {
    padding: 5px!important;
}
button.owl-dot.active {
    background-color: #231F20!important;
}
.banner-area .owl-dots {
    display: block !important;
    text-align: center!important;
    position: absolute!important;
    bottom: 4%!important;
    left: 50%!important;
}
.banner-area button.owl-dot.active {
    border: 2px solid #231F20;
}
@media(max-width:767px){
    .main02 h2 {
        font-size:18px !important;
        margin-bottom:30px;
        line-height:normal !important;
    }
    .single-banner-slide {
        padding:20px 10px !important;
    }
    .single-banner-slide p {
        font-size:13px;
        display:none;
        padding-bottom:20px !important;
    }
    .main02 a {
        padding:5px 15px !important;
    }
    .main02 {
        width:50% !important;
    }
}
</style>

{% schema %}
{
    "name": "custom slider",
    "settings": [],
    "blocks": [
        {
            "type": "group",
            "name": "Add slider",
            "settings": [
                {
                    "type": "image_picker",
                    "label": "Background Image",
                    "id": "bgimage"
                },
                {
                    "type": "image_picker",
                    "label": "Mobile Background Image",
                    "id": "mobbg"
                },
                {
                    "type": "color",
                    "id": "colour",
                    "label": "Change Heading Text Color"
                },
                {
                    "type": "text",
                    "label": "Heading",
                    "id": "heading1"
                },
                {
                    "type": "color",
                    "id": "colour2",
                    "label": "Change Paragraph Text Color"
                },
                {
                    "type": "textarea",
                    "label": "Text",
                    "id": "per1"
                },
                {
                    "type": "textarea",
                    "label": "Counter",
                    "id": "counter"
                },
                {
                    "type": "text",
                    "label": "Button Text",
                    "id": "btntext"
                },
                {
                    "type": "url",
                    "label": "Button URL",
                    "id": "btnurl"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "custom slider"
        }
    ]
}
{% endschema %}
